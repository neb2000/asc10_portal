      = link_to reply_message_path(@message), class: 'btn btn-link btn-small' do
        %i.icon-reply        
      = link_to '#', class: 'btn btn-link btn-small' do
        %i.icon-trash
    %ul.unstyled.muted
      %li
        %small
          %strong
            From:
          #{@message.display_sender}
