= display_left_sidebar
.content-box
  .page-header
    %h3
      Sent messages
  - if @messages.empty?
    %p
      No messages
  - else
    .well.well-small.well-black
      %table.table.no-whitespace#message-table
        %thead
          %tr
            %th.span5 Subject
            %th To
            %th Date
            %th
        %tbody
          - @messages.each do |message|
            %tr[message.source]
              %td= link_to message.display_topic, message_path(message)
              %td= message.display_recipient
              %td= message.display_created_at
              %td.td-actions
                .btn-group
                  = link_to message_path(message), method: :delete, remote: true, title: 'Delete this message', confirm: 'Are you sure you want to delete this message?', class: 'btn btn-link btn-small' do
                    %i.icon-trash
            
