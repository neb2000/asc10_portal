.content-box.well[page.source]
  .btn-group.pull-right
    = link_to [:edit, :admin, page], class: 'btn btn-link' do
      %i.icon-pencil
    = link_to [:admin, page], class: 'btn btn-link', method: :delete, data: { confirm: 'Are you sure you want to delete this record?' } do
      %i.icon-trash.text-error
  %h3
    = page.display_title
  .content= page.display_content