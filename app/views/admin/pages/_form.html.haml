.well.well-form
  = simple_form_for [:admin, @page] do |f|
    .form-inputs
      = f.input :title, input_html: { class: 'input-block-level', placeholder: 'Title' }, autofocus: true
      = f.input :content, input_html: { class: 'input-block-level', rows: '12' }, as: :bootsy
      .row-fluid
        .span4
          = f.input :display_shoutbox, as: :boolean, label: false, inline_label: 'Display shoutbox on the page'
        .span4
          = f.input :display_recruitment, as: :boolean, label: false, inline_label: 'Display recruitment info on the page'
    .form-actions
      = cancel_button(url_for(action: :index))
      .pull-right
        = submit_button