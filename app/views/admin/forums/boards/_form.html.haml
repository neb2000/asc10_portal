= simple_form_for [:admin, @board], remote: true, html: { class: 'no-whitespace' } do |f|
  .modal-header
    = link_to '#', class: 'close', data: { dismiss: 'modal' } do
      &times;
    %h3 #{@board.new_record? ? 'New' : 'Edit'} forum board
  .modal-body
    = f.input :name, autofocus: true
    = f.association :category
    = f.input :description, input_html: { class: 'input-block-level', rows: 3 }
    = f.association :managers, input_html: { class: 'input-block-level' }
  .modal-footer
    = dismiss_modal_button
    = submit_button