.page-header
  .pull-right
    = link_to [:new, :admin, :forums, :board], class: 'btn btn-link ajax-modal' do
      %i.icon-plus.text-success
      %span.text-success
        Add
  %h1 Forum boards
#board-list
  - if @boards.empty?
    %p.no-record
      No records to display
  - else
    = render partial: 'board', collection: @boards, as: :board