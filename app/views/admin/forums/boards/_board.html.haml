.content-box.well[board.source]
  .btn-group.pull-right
    = link_to [:edit, :admin, board], class: 'btn btn-link ajax-modal' do
      %i.icon-pencil
    = link_to [:admin, board], class: 'btn btn-link', remote: true, method: :delete, data: { confirm: 'Are you sure you want to delete this record?' } do
      %i.icon-trash.text-error
  %h3
    = board.display_read_only
    = board.display_name
    %small.muted
      [#{board.display_category}]
  .content= board.display_description