.page-header
  .pull-right
    = link_to [:new, :admin, :forums, :category], class: 'btn btn-link ajax-modal' do
      %i.icon-plus.text-success
      %span.text-success
        Add
  %h1 Forum categories
#category-list
  - if @categories.empty?
    %p.no-record
      No records to display
  - else
    = render partial: 'category', collection: @categories, as: :category