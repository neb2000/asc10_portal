= simple_form_for [:admin, @category], remote: true, html: { class: 'no-whitespace' } do |f|
  .modal-header
    = link_to '#', class: 'close', data: { dismiss: 'modal' } do
      &times;
    %h3 #{@category.new_record? ? 'New' : 'Edit'} forum category
  .modal-body
    = f.input :name, autofocus: true
    = f.input :description, input_html: { class: 'input-block-level', rows: 3 }
    = f.input :public, as: :boolean, label: false, inline_label: 'Available to public'
  .modal-footer
    = dismiss_modal_button
    = submit_button