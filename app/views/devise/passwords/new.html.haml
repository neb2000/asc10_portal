.row
  .span6.offset3
    .content-box.no-whitespace
      .page-header
        %h3 Forgot your password?
      = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-horizontal no-whitespace' }) do |f|
        .inputs
          = f.input :email, :required => true, :autofocus => true
        .actions
          .pull-right
            = render "devise/shared/links"
          = f.button :submit, "Send me reset password instructions", class: 'btn-primary'